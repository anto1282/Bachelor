//Profile config names for nf-core/configs
conda.enabled = true
conda {channels = ['bioconda','defaults']}
useMamba = true
profiles{
    standard{
        process.executor = 'local'
        params{
            IDS = "SRR23446271"
            outdir = "./Results"
            krakDB = "KrakenDB"
            samplerate = 0.3
            sampleseed = 5
            server = false
            cutoff = 0.7
            phaDB = "PHAROKKADB"
            DATABASEDIR = "${projectDir}/../"
            DVFPath = "${projectDir}/../DeepVirFinder/dvf.py"

        }
    }

    cluster{
        params {
            max_memory = 1000.GB
            max_cpus = 50
            max_time = 720.h

            process.cpus = 4
            process.memory = "4 GB"

            IDS = "SRR23446271"
            outdir = "./Results"
            krakDB = "EUPathDB48"
            server = true
            cutoff = 0.7
            phaDB = "/projects/mjolnir1/apps/conda/pharokka-1.2.1"
            DATABASEDIR = "/projects/mjolnir1/data/databases"
            DVFPath = "dvf.py"

        }
        conda.enabled = true
        conda {channels = ['bioconda','defaults']}
        useMamba = true
        
        singularity {
                enabled = true
                autoMounts = true
                cacheDir = '/maps/projects/mjolnir1/data/cache/nf-core/singularity'
        }
                
        process {
        executor = 'slurm'
        }
                
        cleanup = true
            
        executor {
        queueSize = 10
        }
    }

}


