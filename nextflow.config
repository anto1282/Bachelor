//Profile config names for nf-core/configs
profiles{
    standard{
        process.executor = 'local'
        conda.enabled = true
        conda {channels = ['bioconda','defaults']}
        useMamba = true
        params{
            IDS = "SRR23446271"
            outdir = "./Results"
            krakDB = "KrakenDB"
            samplerate = 0.3
            sampleseed = 5
            server = false
            cutoff = 0.7
            phaDB = "PHAROKKADB"
            DATABASEDIR = "../"

        }



    }

    cluster{
        params {
        config_profile_description = 'Section for Hologenomics and Section for Molecular Ecology and Evolution @ Globe Institute, University of Copenhagen - mjolnir_globe profile provided by nf-core/configs.'
        config_profile_contact = 'Aashild Vaagene (@ashildv)'
        config_profile_url = 'https://globe.ku.dk/research/'
        max_memory = 1000.GB
        max_cpus = 50
        max_time = 720.h

        IDS = "SRR23446271"
        outdir = "./Results"
        krakDB = "kraken2"
        server = true
        cutoff = 0.7
        phaDB = "/projects/mjolnir1/apps/conda/pharokka-1.2.1"
        DATABASEDIR = "/projects/mjolnir1/data/databases"

        }
        conda.enabled = true
        conda {channels = ['bioconda','defaults']}
        useMamba = true
        singularity {
                enabled = true
                autoMounts = true
                cacheDir = '/maps/projects/mjolnir1/data/cache/nf-core/singularity'
        }
                
        process {
        executor = 'slurm'
        }
                
        cleanup = true
            
        executor {
        queueSize = 10
        }
    }

}


